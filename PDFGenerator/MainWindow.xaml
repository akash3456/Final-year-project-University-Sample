<Window x:Class="PDFGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="iGen" Height="758" Width="899" MinHeight="550" MinWidth="800" ResizeMode="CanResize">
    <Grid >
        <TabControl x:Name="Tabs" TabStripPlacement="Top" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto" Foreground="#FF9E9A9A" >
            <TabControl.Background>
                <ImageBrush/>
            </TabControl.Background>
            <TabItem x:Name="UploadTab" Header="Browse Template">
                <!--<Grid Background="#FFBBB1B1" Margin="0,0,0,25"/>-->
                <StackPanel Name="layout" Orientation="Horizontal" Background="#FFBBB1B1" Width="882">
                    <!-- add controls to panel layout..-->
                    <TextBox TextChanged="txtPath_TextChanged" Name="txtPath" Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="30" Width="520" Margin="10,30,0,420"></TextBox>
                    <Button Name="BtnBrowse" Click="BtnBrowse_Click"  Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="160" Margin="10,30,0,420">Browse</Button>
                    <DockPanel Margin="-711,30,0,0" Width="885" Height="683">
                        
                            <WebBrowser Name="webBrowser" Height="556" Margin="22,109,-7,61" VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="848" OpacityMask="#FFB69393"/>
                            <!--<WebBrowser Height="348" Margin="0,10,0,0" Name="webBrowser" VerticalAlignment="Top" Width="768"/>-->
                        
                        <DockPanel Name="dckLayout" Width="0" >
                            <TextBox DockPanel.Dock="Left" Name="txtFilePath" IsEnabled="False" VerticalAlignment="Top" Width="520" HorizontalAlignment="Stretch" Margin="-1191,65,0,378" TextChanged="txtFilePath_TextChanged"/>
                        </DockPanel>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="GenerateDoc" >
                <Grid Background="#FFBBB1B1" Margin="0,0,0,25"/>

            </TabItem>
            <TabItem Header="">
                <Grid Background="#FFBBB1B1" Margin="0,0,0,25"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
